{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);        //Построение 1 функции
var
  a, b, c, d, range1, range2, i: double;
  Graph1: TCubic;
  Graph2: TCos;
  Graph3: TSin;
  Graph4: TTg;
  Graph5: TCtg;
begin
  if (edit5.Text = '') or (edit6.Text = '') or (strtofloat(edit5.text) >= strtofloat(edit6.text)) or (edit1.Text = '') or (edit2.Text = '') or (edit3.Text = '') or (edit4.Text = '') then
    showmessage('Заполните все поля корректно!')
  else
  begin
      chart1.UndoZoom;
      a := strtofloat(edit1.text);
      b := strtofloat(edit2.text);
      c := strtofloat(edit3.text);
      d := strtofloat(edit4.text);
      range1 := strtofloat(edit5.text);
      range2 := strtofloat(edit6.text);

    if combobox1.ItemIndex = -1 then
      showmessage('Выберите вид функции');

    if combobox1.ItemIndex = 0 then    //Кубическое уравнение
    begin
      Graph1:= TCubic.Create(a, b, c, d);
      Graph1.Draw(range1, range2, Series1, ColorDialog1.Color);
    end;

    if combobox1.ItemIndex = 1 then    //Косинус
    begin
      Graph2 := TCos.Create(a, b, c, d);
      Graph2.Draw(range1, range2, Series1, ColorDialog1.Color);
    end;

    if combobox1.ItemIndex = 2 then    //Синус
    begin
      Graph3 := Tsin.Create(a, b, c, d);
      Graph3.Draw(range1, range2, Series1, ColorDialog1.Color);
    end;

    if combobox1.ItemIndex = 3 then    //Тангенс
    begin
      Graph4 := TTg.Create(a, b, c, d);
      Graph4.Draw(range1, range2, Series1, ColorDialog1.Color);
    end;

    if combobox1.ItemIndex = 4 then    //Котангенс
    begin
      Graph5 := TCtg.Create(a, b, c, d);
      Graph5.Draw(range1, range2, Series1, ColorDialog1.Color);
    end;

  end;
end;

procedure TForm1.Button2Click(Sender: TObject);   //Очистка поля
begin
  Series1.Clear;
  Series2.Clear;
  chart1.UndoZoom;
end;

procedure TForm1.Button3Click(Sender: TObject);   //Выбор цвета  1 функции
begin
  colordialog1.Execute;
end;

procedure TForm1.Button4Click(Sender: TObject);    //Выбор цвета 2 функции
begin
  colordialog2.Execute;
end;

procedure TForm1.Button5Click(Sender: TObject);    //Построение 2 функции
var
  a, b, c, d, range1, range2, i: double;
  Graph1: TCubic;
  Graph2: TCos;
  Graph3: TSin;
  Graph4: TTg;
  Graph5: TCtg;
begin
  if (edit11.Text = '') or (edit12.Text = '') or (strtofloat(edit11.text) >= strtofloat(edit12.text)) or (edit7.Text = '') or (edit8.Text = '') or (edit9.Text = '') or (edit10.Text = '') then
    showmessage('Заполните все поля корректно!')
  else
  begin
      chart1.UndoZoom;
      a := strtofloat(edit7.text);
      b := strtofloat(edit8.text);
      c := strtofloat(edit9.text);
      d := strtofloat(edit10.text);
      range1 := strtofloat(edit11.text);
      range2 := strtofloat(edit12.text);

    if combobox2.ItemIndex = -1 then
      showmessage('Выберите вид функции');

    if combobox2.ItemIndex = 0 then    //Кубическое уравнение
    begin
      Graph1:= TCubic.Create(a, b, c, d);
      Graph1.Draw(range1, range2, Series2, ColorDialog2.Color);
    end;

    if combobox2.ItemIndex = 1 then    //Косинус
    begin
      Graph2 := TCos.Create(a, b, c, d);
      Graph2.Draw(range1, range2, Series2, ColorDialog2.Color);
    end;

    if combobox2.ItemIndex = 2 then    //Синус
    begin
      Graph3 := Tsin.Create(a, b, c, d);
      Graph3.Draw(range1, range2, Series2, ColorDialog2.Color);
    end;

    if combobox2.ItemIndex = 3 then    //Тангенс
    begin
      Graph4 := TTg.Create(a, b, c, d);
      Graph4.Draw(range1, range2, Series2, ColorDialog2.Color);
    end;

    if combobox2.ItemIndex = 4 then    //Котангенс
    begin
      Graph5 := TCtg.Create(a, b, c, d);
      Graph5.Draw(range1, range2, Series2, ColorDialog2.Color);
    end;

  end;
end;

procedure TForm1.Edit1KeyPress(Sender: TObject; var Key: Char);  //Разрешение ввода только цифр (коэффициенты)
begin
  if not (Key in ['0'..'9', #8, #44, #45]) then
    Key := #0;
end;

procedure TForm1.SetEditChars(Sender: TObject; var Key: Char);  //Разрешение ввода только цифр и ограничение диапазона(диапазон)
begin
  with Sender as TEdit do
  begin
    if not (Key in ['0'..'9', #8, #44, #45]) then
      Key := #0;
    if Text = '' then
      MaxLength := 3;
    if Key = #45 then
      MaxLength := 4;
  end;

end;

procedure TForm1.Edit11KeyPress(Sender: TObject; var Key: Char);
begin
SetEditChars(Sender,key);
end;

procedure TForm1.Edit12KeyPress(Sender: TObject; var Key: Char);
begin
SetEditChars(Sender,key);
end;

procedure TForm1.Edit5KeyPress(Sender: TObject; var Key: Char);
begin
SetEditChars(Sender,key);
end;

procedure TForm1.Edit6KeyPress(Sender: TObject; var Key: Char);
begin
SetEditChars(Sender,key);
end;

end.

